<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" 
		xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Dasa">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:jboss/datasources/MySQL-DASA-DS</jta-data-source>
		
		
		<class>com.iveso.dasa.entity.Cliente</class>
		<class>com.iveso.dasa.entity.Endereco</class>
		<class>com.iveso.dasa.entity.Estado</class>
		<class>com.iveso.dasa.entity.Contato</class>
		<class>com.iveso.dasa.entity.Produto</class>
		<class>com.iveso.dasa.entity.Nota</class>
		<class>com.iveso.dasa.entity.Recibo</class>
		<class>com.iveso.dasa.entity.Pedido</class>
		
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="none"/>
<!-- 			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/> -->
<!-- 			<property name="javax.persistence.sql-load-script-source" value="META-INF/dados.sql"/> -->
		</properties>
	</persistence-unit>
</persistence>
